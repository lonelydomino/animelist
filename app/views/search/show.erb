<head>
    <meta charset="UTF-8">
    <title>My anime lists</title>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
    <link rel="stylesheet" type="text/css" href="../css/search/results.css">
	

</head>

<ul class="tilesWrap">
    <% @data.each do |d| %> 
        <li>
            <% @image = d["attributes"]["posterImage"]["small"] %>
			<% @title = d["attributes"]["titles"]["en"] %> 
			<% @rating = d["attributes"]["averageRating"] %> 
			<% @episode_count = d["attributes"]["episodeCount"] %> 
			<% @id = d["id"] %> 

            <img src="<%= @image %>" alt="<%= @title %>_image">
			<% if !@title %>
				<% @title = d["attributes"]["titles"]["en_jp"] %>
			<% end%>
			<% if !@title %>
				<% @title = d["attributes"]["titles"]["ja_jp"] %>
			<% end%>
			<% if !@title %>
				<% @title = d["attributes"]["titles"]["en_us"] %>
			<% end%>
            <br>
            <h2><%= @title %>  </h2>
		    <h3><%= @title %>   </h3>
            <p>
			Rating: <%= @rating %> / 100 <br>
			Episode count: <%= @episode_count%> 



	    	</p> 

            <button>Read more</button>
			
        </li>
    <% end %> 
</ul>




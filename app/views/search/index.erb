<head>
    <meta charset="UTF-8">
    <title>My anime lists</title>
    <link rel="stylesheet" type="text/css" href="../css/search/search.css">
</head>


<div id="cover">
  <form method="get" action="/results">
    <div class="tb">
      <div class="td"><input type="text" name="search[query]" placeholder="Search" required></div>
      <div class="td" id="s-cover">
        <button type="submit">
          <div id="s-circle"></div>
          <span></span>
        </button>
      </div>
    </div>
  </form>
</div>

<div id="search">
<% @collection_data.each do |anime|%>
  <h3> <%= anime["attributes"]["titles"]["en"] %> </h3>
<% end %>

</div>



<head>
    <meta charset="UTF-8">
    <title>Show list</title>
    <link rel="stylesheet" type="text/css" href="../css/lists/show.css">
</head>

<h1><%= @list.name%></h1>

 <section id="anime-list">
      <p>
 
      <% if !@list.animes.empty? %>
      <table id="anime-data">
      <tr>
        <th>Name</th>
        <th>Class</th>
        <th>Race</th>
      </tr>
      
        <% @list.animes.each do |c| %>
        <tr>
          <td><a href="/lists/<%= @list.id %>/animes/<%=c.id%>"><%= c.name %></a></td>
          <td><%= "add desc later" %></td>
        </tr>
        <% end %>
       
    </table>
    <% else %>

        <br><br><br><br><br><br>
          <p id="p1"> No anime data! </p>
    <% end %>
<br><br><br><br>    
      </p>
      
    </section>


<div id="container">

    
  <br>

  <div class="button" id="button-3">
    <div id="circle"></div>
    <a href="/lists/<%= @list.id %>/edit">Edit</a>
  </div>

  <br>

  <div class="button" id="button-3">
    <div id="circle"></div>
        <form action="/lists/<%= @list.id %>/delete" method="post">
             <input type="hidden" name="_method" value="delete">
             <input type="submit" value="Delete" role="button" class="deletebutton">
        </form>
  </div>

  <br>

   <div class="button" id="button-3">
    <div id="circle"></div>
        <a href="/lists"> Back </a>
  </div>

  <br>

  </div>
  









